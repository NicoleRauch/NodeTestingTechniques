extends ../layout

block title
  | #{status} - #{error}
block content
  .row
    .col-md-6
      h3 #{t('error.congratulations')}
      p #{t('error.found500')}
        | #{t('error.click_links')}
      !=t('error.error500_text', { postProcess: 'jade' })
      p #{t('error.sorry')}
    .col-md-6
      h3 #{status}
      p
        pre #{error.stack}
