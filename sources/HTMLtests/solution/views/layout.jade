doctype html
html
  head
    meta(charset='utf-8')
    link(href='/stylesheets/screen.css', rel='stylesheet')
    if (language === 'de')
      script(src='/clientscripts/global_de.js')
    else
      script(src='/clientscripts/global_en.js')
    if (!!calViewYear)
      script.
        $(document).ready(function () {
          var date = moment().year(#{calViewYear}).month(#{calViewMonth});
          $('#calendar').fullCalendar('gotoDate', date);      
        });
    block scripts
    title
      block title
      | &nbsp;- SWK
  body
    include layoutComponents
    include loginComponent
    .navbar.navbar-default.navbar-fixed-top
      +topNavbar
    .row.main
      .col-md-12
        if (statusmessage)
          +notificationsBlock(statusmessage)
        block content
        p &nbsp;
